<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:layout="@layout/preference_banner"
        />

    <Preference
        android:icon="@drawable/ic_grid_view"
        android:key="name"
        android:layout="@layout/preference_basic"
        android:summary="@string/app_name"
        android:title="@string/settings_app_name" />

    <Preference
        android:icon="@drawable/ic_group"
        android:key="author"
        android:layout="@layout/preference_basic"
        android:summary="@string/author"
        android:title="@string/settings_author_name" />

    <Preference
        android:icon="@drawable/ic_conversion_path"
        android:key="version"
        android:layout="@layout/preference_basic"
        android:summary="@string/settings_unknown_version"
        android:title="@string/version" />

</PreferenceScreen>